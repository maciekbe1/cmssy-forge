{
  "name": "cmssy-cli",
  "version": "0.18.0",
  "description": "Unified CLI for building and publishing blocks to Cmssy marketplace",
  "type": "module",
  "bin": {
    "cmssy": "./dist/cli.js",
    "cmssy-cli": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/cli.js",
    "./config": "./config.js"
  },
  "scripts": {
    "build": "tsc && tsc config.ts --module esnext --target esnext --moduleResolution bundler && tsc config.ts --declaration --emitDeclarationOnly --module esnext --target esnext --moduleResolution bundler && cp -r src/dev-ui dist/",
    "dev": "tsc --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "cmssy",
    "marketplace",
    "cli",
    "cms"
  ],
  "author": "Cmssy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maciekbe1/cmssy-cli.git"
  },
  "homepage": "https://github.com/maciekbe1/cmssy-cli#readme",
  "bugs": {
    "url": "https://github.com/maciekbe1/cmssy-cli/issues"
  },
  "files": [
    "dist",
    "config.js",
    "config.d.ts",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.0",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.2",
    "inquirer": "^10.0.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "postcss": "^8.4.49",
    "semver": "^7.6.3",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/express": "^5.0.0",
    "@types/form-data": "^2.5.2",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.13",
    "@types/semver": "^7.7.1",
    "typescript": "^5.7.2"
  }
}
